---
import { address, email, telephone } from "src/constants";
import EmailLink from "./EmailLink.astro";
import GoogleMapLocation from "./GoogleMapLocation.astro";
import SectionContainer from "./SectionContainer.astro";
import TelephoneLink from "./TelephoneLink.astro";
import EnvelopeIcon from "./icons/EnvelopeIcon.astro";
import GeoAltIcon from "./icons/GeoAltIcon.astro";
import TelephoneIcon from "./icons/TelephoneIcon.astro";

const seccion1 = {
  direccion_titulo: "Nuestra Dirección",
  direccion_informacion: address,
  correo_titulo: "Correo Electrónico",
  correo_informacion: email,
  telefono_titulo: "Teléfono",
  telefono_informacion: telephone,
};
---

<SectionContainer id="contact" class="contact">
  <div class="section-header">
    <h2>Contáctanos</h2>
  </div>
  <div class="row gy-4">
    <div class="col-lg-6">
      <div
        class="info-item d-flex flex-column justify-content-center align-items-center"
      >
        <GeoAltIcon />
        <h3>{seccion1.direccion_titulo}</h3>
        <p>{seccion1.direccion_informacion}</p>
      </div>
    </div>

    <div class="col-lg-3 col-md-6">
      <div
        class="info-item d-flex flex-column justify-content-center align-items-center"
      >
        <EnvelopeIcon />
        <h3>{seccion1.correo_titulo}</h3>
        <EmailLink />
      </div>
    </div>

    <div class="col-lg-3 col-md-6">
      <div
        class="info-item d-flex flex-column justify-content-center align-items-center"
      >
        <TelephoneIcon />
        <h3>{seccion1.telefono_titulo}</h3>
        <TelephoneLink />
      </div>
    </div>
  </div>
</SectionContainer>
<SectionContainer id="contact-map" class="contact-map" fullWidth>
  <div class="row gy-4 mt-1">
    <div class="col-lg-12">
      <div class="map-container"><GoogleMapLocation /></div>
    </div>
  </div>
</SectionContainer>

<style>
  .map-container {
    min-height: 400px;
    height: 100%;
  }
</style>
